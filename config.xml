<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sebastienchampoux.wizardapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Wizard App</name>
    <description>
		Une application simple pour compiler plus facilement les pointages au jeu de cartes Wizard
	</description>
    <author email="sebs.champoux@gmail.com" href="http://sebastienchampoux.com">
		SÃ©bastien Champoux
	</author>
    <content src="dist/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="7.1.4" />
    <engine name="browser" spec="5.0.4" />
</widget>
